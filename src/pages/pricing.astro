---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Pricing | Southern Maryland Mailbox Services"
  description="Transparent pricing for mailbox installation and repair services in Southern Maryland. Free quotes available."
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-blue-600 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Pricing</h1>
      <p class="text-xl text-blue-100 max-w-2xl">
        Transparent, competitive pricing for quality mailbox services
      </p>
    </div>
  </section>

