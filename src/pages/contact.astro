---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact Us | Southern Maryland Mailbox Services"
  description="Get a free quote for mailbox installation or repair in Calvert, St. Mary's, and Charles Counties. Contact us today!"
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-blue-600 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
      <p class="text-xl text-blue-100 max-w-2xl">
        Get your free quote today—we're here to help with all your mailbox needs
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Request a Free Quote</h2>
          <p class="text-gray-600 mb-8">
            Fill out the form below and we'll get back to you within 24 hours with a detailed quote. For urgent requests, please call us directly.
          </p>
          
          <form class="space-y-6" id="contact-form">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Full Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                placeholder="John Smith"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email Address *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone Number *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                placeholder="(555) 123-4567"
              />
            </div>

            <div>
              <label for="address" class="block text-sm font-medium text-gray-700 mb-2">
                Service Address
              </label>
              <input
                type="text"
                id="address"
                name="address"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                placeholder="123 Main St, Lusby, MD 20657"
              />
            </div>

            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
                Service Needed *
              </label>
              <select
                id="service"
                name="service"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
              >
                <option value="">Select a service...</option>
                <option value="new-installation">New Installation</option>
                <option value="repair">Repair/Maintenance</option>
                <option value="replacement">Complete Replacement</option>
                <option value="multi-mailbox">Multi-Mailbox Installation</option>
                <option value="house-numbers">House Numbers</option>
                <option value="lighting">Post Lighting</option>
                <option value="other">Other/Not Sure</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Project Details
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                placeholder="Tell us about your project, any specific requirements, or questions you have..."
              ></textarea>
            </div>

            <div>
              <button
                type="submit"
                class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
              >
                Submit Request
              </button>
            </div>

            <p class="text-sm text-gray-500">
              * Required fields. We respect your privacy and will never share your information.
            </p>
          </form>

          <div id="form-message" class="mt-4 hidden"></div>
        </div>

        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Get In Touch</h2>
          
          <div class="space-y-6 mb-8">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">Phone</h3>
                <p class="text-gray-600">Call or text for fastest response</p>
                <a href="tel:+15555551234" class="text-blue-600 font-semibold hover:text-blue-700">
                  (555) 555-1234
                </a>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">Email</h3>
                <p class="text-gray-600">We'll respond within 24 hours</p>
                <a href="mailto:info@somdmailbox.com" class="text-blue-600 font-semibold hover:text-blue-700">
                  info@somdmailbox.com
                </a>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">Service Area</h3>
                <p class="text-gray-600">
                  Lusby, MD and surrounding areas<br />
                  Calvert, St. Mary's, and Charles Counties
                </p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-semibold text-gray-900">Business Hours</h3>
                <p class="text-gray-600">
                  Monday - Friday: 8:00 AM - 6:00 PM<br />
                  Saturday: 9:00 AM - 4:00 PM<br />
                  Sunday: Emergency service only
                </p>
              </div>
            </div>
          </div>

          <!-- What to Expect -->
          <div class="bg-blue-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">What to Expect</h3>
            <ol class="space-y-3 text-gray-700">
              <li class="flex items-start">
                <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">1</span>
                <span><strong>Quick Response:</strong> We'll contact you within 24 hours (usually much sooner)</span>
              </li>
              <li class="flex items-start">
                <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">2</span>
                <span><strong>Free Quote:</strong> We'll provide a detailed, no-obligation estimate</span>
              </li>
              <li class="flex items-start">
                <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">3</span>
                <span><strong>Schedule Service:</strong> Choose a convenient time for installation</span>
              </li>
              <li class="flex items-start">
                <span class="flex-shrink-0 w-6 h-6 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">4</span>
                <span><strong>Professional Work:</strong> Quality installation with complete cleanup</span>
              </li>
            </ol>
          </div>

          <!-- Tips for Getting Quote -->
          <div class="mt-8 bg-gray-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Tips for Faster Quotes</h3>
            <ul class="space-y-2 text-gray-700 text-sm">
              <li>✓ Include photos of your current mailbox situation</li>
              <li>✓ Mention any HOA requirements or restrictions</li>
              <li>✓ Let us know your preferred mailbox style if you have one</li>
              <li>✓ Indicate your timeline (urgent, flexible, etc.)</li>
              <li>✓ Share your approximate address for travel estimates</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Service Banner -->
  <section class="py-12 bg-red-50 border-t-4 border-red-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Need Emergency Service?</h2>
        <p class="text-gray-600 mb-4">
          Vehicle damage or storm damage? We offer same-day emergency repairs.
        </p>
        <a href="tel:+15555551234" class="inline-block bg-red-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors">
          Call Now: (555) 555-1234
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  // Simple form handling (for demonstration - would connect to actual backend)
  const form = document.getElementById('contact-form');
  const messageDiv = document.getElementById('form-message');
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // Show success message
    if (messageDiv) {
      messageDiv.className = 'mt-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800';
      messageDiv.textContent = 'Thank you for your request! We\'ll contact you within 24 hours.';
      messageDiv.classList.remove('hidden');
    }
    
    // Reset form
    form.reset();
    
    // Hide message after 5 seconds
    setTimeout(() => {
      messageDiv?.classList.add('hidden');
    }, 5000);
  });
</script>
