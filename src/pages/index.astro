---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Southern Maryland Mailbox Services | Professional Installation & Repair">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-600 to-blue-800 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-balance">
          Transform Your Home's First Impression
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto text-balance">
          Professional mailbox installation, repair, and curb appeal services serving Calvert, St. Mary's, and Charles Counties
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors shadow-lg">
            Get Free Quote
          </a>
          <a href="/services" class="bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors border-2 border-white">
            View Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our Services</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Comprehensive mailbox solutions for Southern Maryland homeowners
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Service 1 -->
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="text-blue-600 mb-4">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">New Installation</h3>
          <p class="text-gray-600 mb-4">
            Complete mailbox and post installation with premium materials and professional craftsmanship. USPS compliant and built to last.
          </p>
          <a href="/services#installation" class="text-blue-600 font-semibold hover:text-blue-700">
            Learn more →
          </a>
        </div>

        <!-- Service 2 -->
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="text-blue-600 mb-4">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Repair & Maintenance</h3>
          <p class="text-gray-600 mb-4">
            Expert repair services for damaged, leaning, or weathered mailboxes. We fix posts, doors, hardware, and more.
          </p>
          <a href="/services#repair" class="text-blue-600 font-semibold hover:text-blue-700">
            Learn more →
          </a>
        </div>

        <!-- Service 3 -->
        <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <div class="text-blue-600 mb-4">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Custom Options</h3>
          <p class="text-gray-600 mb-4">
            From basic to high-end mailboxes, decorative posts, house numbers, and lighting. Create the perfect curb appeal package.
          </p>
          <a href="/custom-options" class="text-blue-600 font-semibold hover:text-blue-700">
            Learn more →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Why Choose Us</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Local expertise, professional service, and quality results
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">USPS Compliant</h3>
          <p class="text-gray-600">All installations meet postal service requirements</p>
        </div>

        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Fast Service</h3>
          <p class="text-gray-600">Quick response times and efficient installations</p>
        </div>

        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Quality Materials</h3>
          <p class="text-gray-600">Durable materials built for Maryland weather</p>
        </div>

        <div class="text-center">
          <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-lg mb-2">Local Service</h3>
          <p class="text-gray-600">Based in Lusby, serving all of Southern Maryland</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Area -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Service Area</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Proudly serving Southern Maryland communities
        </p>
      </div>
      
      <div class="bg-white p-8 rounded-lg shadow-md max-w-3xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
          <div>
            <h3 class="font-bold text-xl text-blue-600 mb-2">Calvert County</h3>
            <ul class="text-gray-600 space-y-1">
              <li>Lusby</li>
              <li>Prince Frederick</li>
              <li>Dunkirk</li>
              <li>Huntingtown</li>
              <li>Solomons</li>
            </ul>
          </div>
          
          <div>
            <h3 class="font-bold text-xl text-blue-600 mb-2">St. Mary's County</h3>
            <ul class="text-gray-600 space-y-1">
              <li>Leonardtown</li>
              <li>California</li>
              <li>Lexington Park</li>
              <li>Mechanicsville</li>
              <li>St. Mary's City</li>
            </ul>
          </div>
          
          <div>
            <h3 class="font-bold text-xl text-blue-600 mb-2">Charles County</h3>
            <ul class="text-gray-600 space-y-1">
              <li>Waldorf</li>
              <li>La Plata</li>
              <li>Indian Head</li>
              <li>Bryans Road</li>
              <li>White Plains</li>
            </ul>
          </div>
        </div>
        <p class="text-center text-gray-600 mt-6">
          And surrounding areas throughout Southern Maryland
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Upgrade Your Mailbox?</h2>
      <p class="text-xl mb-8 text-blue-100">
        Get a free quote today and transform your home's curb appeal
      </p>
      <a href="/contact" class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors shadow-lg">
        Request Free Quote
      </a>
    </div>
  </section>

  <Footer />
</Layout>
